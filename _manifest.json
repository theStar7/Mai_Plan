{
  "manifest_version": 1,
  "name": "麦麦计划表(Mai_Plan)",
  "version": "0.2.0",
  "description": "告别遗忘，让计划井井有条！麦麦化身您的智能日程管家，精准捕捉闲聊中的待办事项。无论是重要计划还是生活琐事，只需自然提及，即可自动创建任务并准时提醒。",
  "author": {
    "name": "theStar7",
    "url": "https://github.com/theStar7"
  },
  "license": "MIT",
  "host_application": {
    "min_version": "0.12.1"
  },
  "homepage_url": "https://github.com/theStar7/Mai_Plan",
  "repository_url": "https://github.com/theStar7/Mai_Plan",
  "keywords": [
    "自动提醒",
    "日程计划",
    "记录"
  ],
  "categories": [
    "Utility Tools",
    "Entertainment & Interaction"
  ],
  "default_locale": "zh-CN",
  "locales_path": "_locales",
  "plugin_info": {
    "is_built_in": false,
    "plugin_type": "chat",
    "components": [
      {
        "type": "action",
        "name": "create_plan_task",
        "description": "根据聊天上下文创建计划任务"
      },
      {
        "type": "command",
        "name": "mai_plan_command",
        "description": "管理计划任务",
        "pattern": "/mai_plan help|list|cancel"
      },
      {
        "type": "event_handler",
        "name": "mai_plan_startup_handler",
        "description": "启动提醒调度器"
      },
      {
        "type": "event_handler",
        "name": "mai_plan_stop_handler",
        "description": "停止提醒调度器"
      },
      {
        "type": "tool",
        "name": "create_plan_task_tool",
        "description": "创建计划任务（LLM 工具调用）"
      },
      {
        "type": "tool",
        "name": "delete_plan_task_tool",
        "description": "删除计划任务（LLM 工具调用）"
      },
      {
        "type": "tool",
        "name": "modify_plan_task_tool",
        "description": "修改计划任务（LLM 工具调用）"
      },
      {
        "type": "tool",
        "name": "list_plan_tasks_tool",
        "description": "查询计划任务列表（LLM 工具调用）"
      }
    ],
    "features": [
      "聊天内容自动生成计划任务",
      "定时触发自动提醒",
      "支持查看和取消任务",
      "任务文件本地持久化",
      "支持 LLM 工具调用（创建/修改/删除/查询任务）"
    ]
  },
  "id": "Mai_Plan"
}
